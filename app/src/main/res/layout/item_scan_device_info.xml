<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linearLayoutDeviceInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="1dp">

        <TextView
            android:id="@+id/textViewScanDeviceInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:tag="1"
            android:text="1234567890"/>

        <LinearLayout
            android:id="@+id/linearLayoutScanDeviceButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="1dp">

            <Button
                android:id="@+id/buttonCopyDeviceId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClickCopyDeviceIdButton"
                android:tag="1"
                android:text="@string/copy_device_id_button" />

            <Button
                android:id="@+id/buttonAssignDeviceToPlayer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClickAssignDeviceToPlayerButton"
                android:tag="1"
                android:text="@string/assign_device_to_player_button" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>